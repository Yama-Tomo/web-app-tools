{
  "name": "@yamatomo/web-app-tools",
  "private": true,
  "scripts": {
    "prepare": "pnpm build",
    "build": "pnpm --aggregate-output -F='./packages/*' build",
    "test": "pnpm --aggregate-output -F='./packages/*' --parallel test",
    "lint": "biome ci",
    "lint:fix": "biome check --write",
    "typecheck": "pnpm --aggregate-output -F='./packages/*' --parallel typecheck"
  },
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.8",
    "@vitest/coverage-v8": "4.0.17",
    "tsdown": "0.20.0-beta.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^25"
    }
  }
}
